{% extends (app.request.attributes.get('_embedded') == true) 
         ? 'CatrobatWebBundle::fragment.html.twig'
         : 'CatrobatWebBundle::base.html.twig' %}

{% block body -%}
<article>
	<header>{{ "projects.featured"|trans }}</header>
	<div id="featuredProjects" class="projectContainer">
	
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.image }} {{ entity.project.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
</article>
{% endblock %}
