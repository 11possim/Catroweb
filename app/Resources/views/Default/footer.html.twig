{% block footer %}
  <div id="footer-menu-desktop" class="footer-padding">
    <div id="footer-menu-desktop-left">
      <div>
        <div><a href="{{ url('catrobat_web_help') }}">Tutorial</a></div>
        <div><a href="http://www.catrobat.org" target="_blank">About</a></div>
        <div><a href="http://play.google.com/store/apps/details?id=org.catrobat.catroid" target="_blank">Google Play</a></div>
        <div><a href="{{ url('licenseToPlay') }}">License to play</a></div>
      </div>
      <div>
        <div><a href="http://developer.catrobat.org/privacy_policy" target="_blank">Privacy Policy</a></div>
        <div><a href="{{ url('termsOfUse') }}">Terms of Use</a></div>
        <div><a href="http://developer.catrobat.org/imprint" target="_blank">Imprint</a></div>
      </div>
    </div>
    <div id="footer-menu-desktop-right">
      <div id="search-footer" class="img-magnifying-glass"></div>
      <input id="search-input-footer" class="input-search" type="search" placeholder="{{ "Search..."|trans({}, "catroweb") }}"/>
    </div>
  </div>

  <div id="footer-menu-bottom" class="footer-padding">
    <div>
      <select id="switch-language" autocomplete="off">
        {% set countries = getLanguageOptions() %}
        {% for country in countries %}
        <option value="{{ country[0] }}" {% if country[2] %}selected{% endif %}>{{ country[1] }}</option>
        {% endfor %}
      </select>
    </div>
    <div id="footer-copyright">
      <a href="http://www.catrobat.org" target="_blank">&copy; Catrobat</a>
    </div>
    <div id="footer-more-less">
      <span id="footer-button-more"><span class="img-more"></span> more</span>
      <span id="footer-button-less"><span class="img-less"></span> less</span>
    </div>
  </div>

  <div id="footer-menu-mobile">
    <div><a href="{{ url('catrobat_web_help') }}">Tutorial</a></div>
    <div><a href="http://www.catrobat.org" target="_blank">About</a></div>
    <div><a href="http://play.google.com/store/apps/details?id=org.catrobat.catroid" target="_blank">Google Play</a></div>
    <div><a href="{{ url('licenseToPlay') }}">License to play</a></div>
    <div><a href="http://developer.catrobat.org/privacy_policy" target="_blank">Privacy Policy</a></div>
    <div><a href="{{ url('termsOfUse') }}">Terms of Use</a></div>
    <div><a href="http://developer.catrobat.org/imprint" target="_blank">Imprint</a></div>
  </div>

{% endblock %}