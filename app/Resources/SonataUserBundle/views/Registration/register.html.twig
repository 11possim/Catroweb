{% extends "CatrobatWebBundle:Default:base.html.twig" %}

{% block head %}
  {#{% stylesheets '@CatrobatWebBundle/Resources/public/css/custom/login.less' filter='cssrewrite,lessphp' %}#}
  {#<link rel="stylesheet" href="{{ asset_url }}" />#}
  {#{% endstylesheets %}#}
{% endblock %}

{% block header %}
  {{ render(controller('catrobat.web.default.controller:headerLogoAction', { _locale: app.request.locale, _embedded: true })) }}
{% endblock header%}

{% block body %}

  {% block fos_user_content %}
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
      {#{{ form_widget(form) }}#}

      {#<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />#}

      <div id="sonata_user_registration_form">


      <div class="input-field">
        {{ form_widget(form.username, {'required': false, 'attr': {'placeholder': 'Username' } }) }}
        <div class="img-login"></div>
      </div>

      <div class="input-field">
        {{ form_widget(form.email, {'required': false, 'attr': {'placeholder': 'Email' } }) }}
        <div class="img-login"></div>
      </div>

      <div class="input-field">
        {{ form_widget(form.plainPassword.first, {'required': false, 'attr': {'placeholder': 'Password' } }) }}
        <div class="img-login"></div>
      </div>

      <div class="input-field">
        {{ form_widget(form.plainPassword.second, {'required': false, 'attr': {'placeholder': 'Password Confirm' } }) }}
        <div class="img-login"></div>
      </div>



      <input type="hidden" id="sonata_user_registration_form__token" name="sonata_user_registration_form[_token]" value="Soj6KNkgiK8mfirOKIi7kTwAuw2dRIopJeWZFTPSwag">

      </div>






      <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
      </div>
    </form>
  {% endblock fos_user_content %}

{% endblock body %}
