<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
  <meta name="robots" content="noindex,nofollow"/>
  <meta name="viewport" content="width=device-width">
  <title>Pocket Code Website {% block title %}{% endblock %}</title>

  {% stylesheets 'css/plugins/*'
                 'css/base/*' filter='cssrewrite,lessphp' output='compiled/base.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" media="screen"/>
  {% endstylesheets %}

  {% javascripts 'js/plugins/*'
                 'js/base/*' output='compiled/script.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}

  {% block head %}{% endblock %}
</head>
<body>

<div id="wrapper">
  <header>
    {% block header %}
      {{ render(controller('AppBundle:Web/Default:header', { _locale: app.request.locale, _embedded: true })) }}
    {% endblock %}
  </header>

  <article>
    {% block body %}{% endblock %}
  </article>
</div>

<footer>
  {% block footer %}
    {{ render(controller('AppBundle:Web/Default:footer', { _locale: app.request.locale, _embedded: true })) }}
  {% endblock %}
</footer>


<script>
  new Main('{{ path('catrobat_web_search', {'q': 0}) }}');
</script>
{% block js %}{% endblock %}

</body>
</html>
