  </div>
  <div id="image-overlay"></div>
  <div id="image-popup">
    <div id="outer-container">
      <div></div>
    </div>
  </div>
{% endblock %}

{% block js %}
  <script src="{{ asset('js/custom/Help.js') }}"></script>
  <script>
    var help = new Help();
    help.setImageModal("{{  asset('images/help/game_jam/') }}");
  </script>

{% endblock %}