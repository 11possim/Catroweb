{% extends ':Default:base.html.twig' %}

{% block head %}
  {% stylesheets 'css/custom/help.less' filter='cssrewrite,lessphp' output='compiled/help.css' %}
  <link rel="stylesheet" href="{{ asset_url }}"/>
  {% endstylesheets %}
{% endblock %}

{% block body %}
  <h1>{{ ("help.tutorialcards.title")|trans({}, "catroweb") }}</h1>

  <div class="tutorialcards-container size-large">
    <p class="description">{{ ("help.tutorialcards.description1")|trans({}, "catroweb") }}
      <strong>{{ ("help.tutorialcards.description2")|trans({}, "catroweb") }}</strong></p>

    {% for i in 1..count %}
      <a href="{{ path('catrobat_web_tutorialcards', {'page': i}) }}">
        <div class="col-2">
          <img src="{{ asset('images/help/tutorialcards/'~i~'.png') }}" alt="" title=""/>
          <span class="title size-xlarge">{{ ("help.tutorialcards.card"~i~".title")|trans({}, "catroweb") }}</span>
        </div>
      </a>
    {% endfor %}

    <div class="clear"></div>

  </div>

{% endblock %}

