{% extends 'CatrobatWebBundle:Default:base.html.twig' %}

{% block body %}
  <h1>{{ "licenseToPlay.title"|trans({}, "catroweb_web") }}</h1>
  <div class="standard-col-text size-large">
    {{ "licenseToPlay.text1"|trans({}, "catroweb_web") }}
    <p>{{ "licenseToPlay.text2"|trans({}, "catroweb_web") }}</p>
    <p>
      <b>{{ "licenseToPlay.text3"|trans({}, "catroweb_web") }}</b>
      <ul>
        <li>{{ "licenseToPlay.list1.item1"|trans({}, "catroweb_web") }}</li>
        <li>{{ "licenseToPlay.list1.item2"|trans({}, "catroweb_web") }}</li>
      </ul>
